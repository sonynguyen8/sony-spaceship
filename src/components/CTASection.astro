---
const title = "Ready to Build Your Dream Store?";
const description = "Let's discuss your project and create an e-commerce experience that converts.";
const buttonText = "Start a Project";
const email = "hello@example.com";
---

<section class="cta" id="contact">
  <div class="container">
    <div class="cta-content">
      <h2>{title}</h2>
      <p>{description}</p>
      <a href={`mailto:${email}`} class="btn btn-primary">{buttonText}</a>
    </div>
  </div>
</section>

<style>
  @import '../styles/cta.css';
</style>
