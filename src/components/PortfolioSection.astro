---
import emmaProject from "../assets/emma-sleep-project.png";
import lovepopProject from "../assets/lovepop-project.png";
import scaleProject from "../assets/scale-sc-project.png";
import vymktgProject from "../assets/vymktg-project.png";
import upperEmpireProject from "../assets/upper-empire-project.png";
import gbstProject from "../assets/gbst-project.png";

const sectionTitle = "Featured Projects";
const projects = [
  {
    tag: "E-commerce Store",
    title: "Magical Greeting Cards",
    description:
      "Developed a custom Shopify store with 95 score on Google PageSpeed Insights. Implemented advanced product customizer.",
    tech: ["Shopify Plus", "Liquid", "Polaris"],
    image: lovepopProject,
    alt: "Shopify store fast loading",
    url: "https://www.lovepop.com"
  },
  {
    tag: "E-commerce Store",
    title: "Premium Furniture Brand",
    description:
      "Custom Shopify theme with advanced filtering, wishlist functionality, and seamless checkout experience.",
    tech: ["Liquid", "React", "Shopify APIs"],
    image: emmaProject,
    alt: "Furniture store display",
    url: "https://www.emma-sleep.com"
  },
  {
    tag: "E-commerce Store",
    title: "Limited Shoes Marketplace",
    description:
      "Setting up a Marketplace for limited edition shoes with multi-vendor support and real-time inventory sync.",
    tech: ["Shopify Plus", "Liquid", "Shopify APIs"],
    image: upperEmpireProject,
    alt: "E-commerce platform",
    url: "https://www.upperempire.com"
  },
  {
    tag: "Saas Platform",
    title: "Ultimate Hosting Solution",
    description:
      "Developed a SaaS platform allow users to easily create and manage their hosting services.",
    tech: ["Javascript", "Cypress", "Docker"],
    image: scaleProject,
    alt: "SaaS platform",
    url: "https://www.scale.sc"
  },
  {
    tag: "Landinng Page",
    title: "Marketing Services",
    description:
      "Developed a landing page to showcase marketing services with lead capture forms and analytics integration.",
    tech: ["Astro JS", "Strapi", "Vercel"],
    image: vymktgProject,
    alt: "Marketing services landing page",
    url: "https://www.vymktg.com"
  },
  {
    tag: "Fintech Platform",
    title: "Global Banking Solutions",
    description:
      "Developed a fintech platform to provide seamless banking solutions with robust security features.",
    tech: ["React JS", "Ember JS", "Cypress"],
    image: gbstProject,
    alt: "Fintech platform",
    url: "https://www.gbst.com"
  }
];
---

<section class="portfolio" id="work">
  <div class="container">
    <h2 class="section-title">{sectionTitle}</h2>
    <div class="portfolio-grid">
      {
        projects.map((project) => (
          <article class="project-card">
            <a href={project.url} target="_blank" rel="noopener noreferrer" class="project-link">
              <div class="project-image">
                <img src={project.image.src} alt={project.alt} loading="lazy" />
              </div>
              <div class="project-content">
                <span class="project-tag">{project.tag}</span>
                <h3>{project.title}</h3>
                <p>{project.description}</p>
                <div class="project-tech">
                  {project.tech.map((tech) => (
                    <span class="tech-pill">{tech}</span>
                  ))}
                </div>
              </div>
            </a>
          </article>
        ))
      }
    </div>
  </div>
</section>

<style>
  @import "../styles/portfolio.css";
</style>
